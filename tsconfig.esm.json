{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "lib": ["es2020"],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "lib/esm",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "lib"]
}
